<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <LangVersion>9</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="commercetools.Sdk.Api" Version="0.2.1" />
      <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="5.0.0-preview.2.20160.3" />
      <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="5.0.0-preview.2.20160.3" />
      <PackageReference Include="Microsoft.Extensions.Hosting" Version="5.0.0-preview.2.20160.3" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="appsettings.test.json">
            <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="Resources\products.csv">
            <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="DLL\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="DLL\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="DLL\**" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="commercetools.Sdk.ImportApi, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>DLL\commercetools.Sdk.ImportApi.dll</HintPath>
      </Reference>
    </ItemGroup>

</Project>
